<% layout("/layouts/boilerplate") %>

<style>
  /* General Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Body styling */
  body {
    font-family: "Arial", sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
  }

  /* Main container styling */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Heading styles */
  h1 {
    font-size: 2.5rem;
    color: #fe424d;
    margin-bottom: 20px;
    text-align: center;
  }

  h2 {
    font-size: 1.75rem;
    color: #fe424d;
    margin: 20px 0 10px;
  }

  p {
    font-size: 1rem;
    margin-bottom: 15px;
    color: #555;
  }

  a {
    color: #fe424d;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #d0313b;
    text-decoration: underline;
  }

  /* Section styling */
  .section {
    margin-bottom: 40px;
  }

  .section p {
    font-size: 1rem;
    color: #333;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 10px;
    border-bottom: 2px solid #fe424d;
    padding-bottom: 5px;
  }

  /* Contact link styling */
  .contact-link {
    color: #fe424d;
    font-weight: bold;
  }

  .contact-link:hover {
    color: #d0313b;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    .container {
      padding: 15px;
    }

    .section-title {
      font-size: 1.3rem;
    }

    p {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    .container {
      padding: 10px;
    }

    .section-title {
      font-size: 1.2rem;
    }

    p {
      font-size: 0.9rem;
    }
  }
</style>

